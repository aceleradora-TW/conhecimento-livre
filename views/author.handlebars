<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Autor</title>
  <link rel="stylesheet" href="/css/author.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Fjalla+One">
</head>
<body>
  <section class="author-section">
    <header class="author-header">
      <div class="logo">
        <h1>&#60;/CONHECIMENTO LIVRE&#62;</h1>
      </div>
      <div class="search">
        <form class="search" action="/" method="post">
          <input id="search" type="text" name="search" placeholder="Procurar">
        </form>
      </div>
    </header>
    <div class="container">
      <div class="author-container">
        <div class="info-author">
          {{#author}}
          <div class="photo-container">
            <div class="photo-author">
            </div>
          </div>
          <div class="info-container">
            <div class="name">
              {{name}}
            </div>
            <div class="email">
              {{email}}
            </div>
          </div>
        </div>
        <div class="bio-container">
          <div class="text-bio">
            <p>{{bio}}</p>
          </div>
        </div>
      </div>
      {{/author}}
      <div class="playlist-container">
        <ul>
          {{#authorCourses}}
          <a href="/content/{{ _id }}">
            <li>{{ title }}</li>
          </a>
          {{/authorCourses}}
        </ul>
      </div>
    </div>
  </section>
</body>
</html>
<div>
  <ul>
    {{#authors}}
    <li>{{bio}} </li>
    {{/authors}}
  </ul>
</div>
