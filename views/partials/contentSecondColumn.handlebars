<div class="tile is-parent">
  <div class="box box-shadow">
    <article class="tile is-child notification">
      <div class="content">
        <div class="next-video">
          {{#next}}
          <h5 class="subtitle has-text-dark">Próxima aula:</h5>
          <div class="playlist-container">
            <a class="link-card" href="/content/{{ id }}">
              <img src="http://i1.ytimg.com/vi/{{ url }}/mqdefault.jpg" alt="Link para a aula {{ title }}">
              {{ title }}
            </a>
          </div>
          <hr>
          {{/next}}
        </div>
        <h5 class="subtitle has-text-dark">Outras aulas:</h5>
        <div class="playlist-container">
          <ul>
            <nav class="level is-mobile is-tablet is-widescreen">
              <div class="level-left">
                <button id="prev" class="button is-primary" onclick="prevPage()">&#10094;</button>
              </div>
              <div class="level-right">
                <button id="next" class="button is-primary" onclick="nextPage()">&#10095;</button>
              </div>
            </nav>
            {{#allContents}}
            <li class="nextContents playlist-container">
              <a class="link-card" href="/content/{{ id }}">
                <img src="http://i1.ytimg.com/vi/{{ url }}/mqdefault.jpg" alt="Link para a aula {{ title }}">
                {{ title }}
              </a>
            </li>
            {{/allContents}}
          </ul>
          {{#allContents}}
          {{else}}
          <p class="subtitle is-6"> Não possui próximas aulas</p>
        </div>
        {{/allContents}}
      </div>
    </article>
  </div>
</div>
<script src="/js/carousel.js" type="text/javascript"></script>
