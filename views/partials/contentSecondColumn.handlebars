<div class="tile is-parent">
  <div class="box-radius">
    <article class="tile is-child notification">
      <div class="content">

        <div class="next-video">
          {{#next}}
          <h5 class="subtitle has-text-dark">Próxima aula:</h5>
          <div class="playlist-container">
            <a class="link-card" href="/content/{{ id }}">
              <img src="http://i1.ytimg.com/vi/{{ url }}/mqdefault.jpg" alt="Link para a aula {{ title }}">
              <span class="has-text-black"> {{ title }}</span>
            </a>
          </div>
          <hr>
          {{/next}}
        </div>

        <h5 class="subtitle has-text-dark">Outras aulas:</h5>
        <div class="playlist-container">
          <ul>
            {{#allContents}}
            <li>
              <a class="link-card" href="/content/{{ id }}">
                <img src="http://i1.ytimg.com/vi/{{ url }}/mqdefault.jpg" alt="Link para a aula {{ title }}">
                <span class="has-text-black"> {{ title }}</span>
              </a>
            </li>
            {{/allContents}}
          </ul>
          {{#allContents}}
          {{else}}
          <p class="subtitle is-6"> Não possui próximas aulas</p>
        </div>
        {{/allContents}}
      </div>
    </article>
  </div>
</div>
