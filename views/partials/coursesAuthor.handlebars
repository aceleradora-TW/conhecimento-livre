<div class="container">
  {{#authorItem}}
  {{#courses}}
  <a href="/course/{{ _id }}">
    <div class="card">
      <div class="card-image">
        <figure class="image is-16by9">
          <img src="{{ image }}" alt="Imagem do curso {{ title }}">
        </figure>
      </div>
      <header class="card-header has-text-centered is-hidden-mobile">
        <p class="card-header-title">
          {{ title }}
        </p>
      </header>
      <div class="card-content card-body is-hidden-mobile">
        {{ description }}
      </div>
    </div>
  </a>
  {{/courses}}
  {{/authorItem}}
</div>
