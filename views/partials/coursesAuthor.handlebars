<div class="container">
  <h1 id="courses" class="subtitle">Cursos:</h1>
  {{#authorItem}}
  {{#courses}}
  <a href="/course/{{ _id }}">
    {{/courses}}
    {{/authorItem}}
    <div class="box-radius">
      {{#authorItem}}
      {{#courses}}
      {{#if flag}}
      <div class="card">
        <div class="card-image">
          <figure class="image is-16by9">
            <img src="{{ image }}" alt="Link para o curso {{ title }}">
          </figure>
        </div>
        <header class="card-header has-text-centered is-hidden-mobile">
          <p class="card-header-title">
            {{ title }}
          </p>
        </header>
        <div class="card-content card-body is-hidden-mobile">
          {{ description }}
        </div>
      </div>
    </a>
    {{/if}}
    {{/courses}}
    {{/authorItem}}
  </div>
</div>
