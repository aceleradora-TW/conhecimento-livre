<section class="hero is-primary is-medium">
  {{> header}}
  <div class="hero-body max-height is-mobile is-tablet is-widescreen">
    <div class="columns">
      <div class="column">
          <h1 class="title is-2 has-text-white is-hidden-mobile">
            <div class="course-title">
              {{#authorItem}}
              {{#courses}}
              {{ title }}
            </div>
          </h1>
          <h1 class="title is-3 has-text-white is-hidden-desktop">
            <div class="course-title">
              {{ title }}
            </div>
          </h1>
          <h2 class="subtitle is-4 has-text-left has-text-grey-darker is-hidden-mobile">
            <div class="column margin-description">
              {{ description }}
              {{/courses}}
              {{/authorItem}}
            </div>
          </h2>
      </div>
      <div class="column is-half">
        <div class="box box-shadow">
          <figure class="image is-16by9">
            {{#authorItem}}
            {{#courses}}
            <img src="{{ image }}" alt="imagem do curso">
            {{/courses}}
            {{/authorItem}}
          </figure>
          <div class="column">
            {{> courseDetails}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
